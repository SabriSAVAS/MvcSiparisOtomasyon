@model SiparisEnt.Dto.CatalogVM.CustomerAuthorizedPopupModel
<div class="modal fade bd-example-modal-lg" id="customerauthorizedpopup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Müşteri Yetkili Listesi</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="table-responsive">
                        <div id="customerauthorizedlistpopup">
                            @Html.Partial("CustomerAuthorizedListPopup", Model)
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="javascript:createNewCustomerAuthorized()" class="btn btn-primary">Yeni Yetkili</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>

            </div>
        </div>
    </div>
</div>


<script>
    function customerauthorizedselect(Id) {
        console.log(Id);
        var customerautfirstname = $("#customerauthorizedFirstName_" + Id).attr("data-id");
        var customerautlastname = $("#customerauthorizedLastName_" + Id).attr("data-id");
        console.log(customerautfirstname);
        $("#CustomerAuthorized").val(customerautfirstname + ' ' + customerautlastname);

        $('#customerauthorizedpopup').modal('hide');
    }
</script>


<script>
    function createNewCustomerAuthorized() {
        var customerId = $("#CustomerId").val();
        
        $("#CustomerAuthorizedCustomerId").val(customerId);
        $('#customerauthorizedAddpopup').modal('show');
        $('#customerauthorizedpopup').modal('hide');
        $("#CustomerAuthorizedCustomerId").val(customerId);
    }
</script>





